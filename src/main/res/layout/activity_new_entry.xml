<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <LinearLayout
            android:id="@+id/new_entry_container_mrng"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <ddrr.bbt.SquareTextView
                    android:id="@+id/new_entry_label_mrng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="mrng" />

                <TextView
                    android:id="@+id/new_entry_time_mrng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <EditText
                android:id="@+id/new_entry_value_mrng"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false"
                android:inputType="none" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_entry_container_eve"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <ddrr.bbt.SquareTextView
                    android:id="@+id/new_entry_label_eve"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="mrng" />

                <TextView
                    android:id="@+id/new_entry_time_eve"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <EditText
                android:id="@+id/new_entry_value_eve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false"
                android:inputType="none" />
        </LinearLayout>
    </LinearLayout>

    <ViewSwitcher
        android:id="@+id/new_entry_keyboard_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
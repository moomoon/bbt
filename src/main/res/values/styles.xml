<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/windowAnims</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="windowAnims" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="keyboard_button">
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:background">@anim/keyboard_button_radiant</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="new_entry_label">
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:background">@drawable/new_entry_label_bg</item>
        <item name="android:textColor">@drawable/new_entry_label_bg</item>
    </style>

</resources>